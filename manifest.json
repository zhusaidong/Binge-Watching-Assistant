{
	"update_url": "http://clients2.google.com/service/update2/crx",
    "manifest_version": 2,
    "minimum_chrome_version": "38",
    
    "name": "追剧助手",
    "short_name": "追剧助手",
    "description": "追剧助手",
    "version": "1.1.0",
    "icons": {
        "16": "assets/icon_16.png",
        "128": "assets/icon_128.png"
    },
    "permissions": [
        "bookmarks",
        "storage",
        "tabs",
        "chrome://favicon/size/*"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "browser_action": {
        "default_title": "追剧助手",
        "default_icon": "assets/icon_128.png",
        "default_popup": "html/popup.html"
    }
}